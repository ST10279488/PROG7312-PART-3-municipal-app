<Window x:Class="MunicipalApp.Windows.ServiceRequestStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Request Status" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Label Content="Search Request ID:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSearchId" Width="200" Margin="8,0"/>
            <Button x:Name="btnSearch" Content="Find" Click="BtnSearch_Click" Margin="6,0"/>
            <Button x:Name="btnShowNextPriority" Content="Next Highest Priority" Click="BtnShowNextPriority_Click" Margin="10,0"/>
            <Button x:Name="btnInOrder" Content="Show In-Order (by ID)" Click="BtnInOrder_Click" Margin="10,0"/>
            <Button x:Name="btnBFS" Content="Graph BFS (example)" Click="BtnBFS_Click" Margin="10,0"/>
        </StackPanel>

        <ListBox x:Name="lstRequests" Grid.Row="1" Margin="0,0,8,0" DisplayMemberPath="ToString" SelectionChanged="LstRequests_SelectionChanged"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" Width="360">
            <TextBlock Text="Details" FontWeight="Bold" Margin="0,0,0,6"/>
            <TextBox x:Name="txtDetails" AcceptsReturn="True" Height="180" TextWrapping="Wrap" IsReadOnly="True"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Label Content="Update Status:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbStatus" Width="150" Margin="6,0">
                    <ComboBoxItem Content="Submitted"/>
                    <ComboBoxItem Content="InProgress"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Rejected"/>
                </ComboBox>
                <Button x:Name="btnUpdateStatus" Content="Update" Click="BtnUpdateStatus_Click" Margin="6,0"/>
            </StackPanel>
            <TextBlock Text="Logs/Traversal Output" FontWeight="Bold" Margin="0,12,0,6"/>
            <TextBox x:Name="txtOutput" Height="200" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StatusBar Grid.Row="2" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
