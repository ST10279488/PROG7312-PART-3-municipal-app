<Window x:Class="FinalMunicipalApp.ReportIssuesWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report an Issue"
        Height="600" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F3F7FB">

    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="12"
                Padding="24"
                BorderBrush="#90CAF9"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Report an Issue"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#0D47A1"
                           Margin="0,0,0,16"
                           TextAlignment="Center"/>

                <!-- Main Content -->
                <StackPanel Grid.Row="1" Margin="0,10" VerticalAlignment="Top">

                    <TextBlock Text="Location:" FontWeight="SemiBold" Foreground="#0D47A1" Margin="0,4,0,2"/>
                    <TextBox x:Name="TxtLocation"
                             Height="28"
                             Padding="4"
                             Background="#E3F2FD"
                             BorderBrush="#64B5F6"
                             BorderThickness="1"
                             />

                    <TextBlock Text="Category:" FontWeight="SemiBold" Foreground="#0D47A1" Margin="0,10,0,2"/>
                    <ComboBox x:Name="CboCategory"
                              Height="28"
                              Background="#E3F2FD"
                              BorderBrush="#64B5F6"
                              BorderThickness="1">
                        <ComboBoxItem Content="Sanitation"/>
                        <ComboBoxItem Content="Roads"/>
                        <ComboBoxItem Content="Utilities"/>
                        <ComboBoxItem Content="Street Lighting"/>
                        <ComboBoxItem Content="Parks and Recreation"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    <TextBlock Text="Description:" FontWeight="SemiBold" Foreground="#0D47A1" Margin="0,10,0,2"/>
                    <RichTextBox x:Name="RtbDescription"
                                 Height="120"
                                 Background="#E3F2FD"
                                 BorderBrush="#64B5F6"
                                 BorderThickness="1"
                                 Padding="6"/>

                    <!-- File Attachments -->
                    <Button x:Name="BtnAttach"
                            Content="Attach Files..."
                            Width="160"
                            Height="32"
                            Margin="0,8,0,4"
                            Background="#64B5F6"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#2196F3"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="BtnAttach_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#64B5F6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#42A5F5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1E88E5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <ListBox x:Name="LstAttachments"
                             Height="80"
                             Background="#E3F2FD"
                             BorderBrush="#BBDEFB"
                             BorderThickness="1"
                             Margin="0,0,0,10"/>

                    <!-- Engagement Section -->
                    <ProgressBar x:Name="EngagementProgress"
                                 Height="18"
                                 Minimum="0"
                                 Maximum="10"
                                 Value="0"
                                 Margin="0,10,0,0"
                                 Foreground="#64B5F6"/>
                    <TextBlock x:Name="LblEngagement"
                               Text="Be the first to report an issue in your area!"
                               FontStyle="Italic"
                               Foreground="DarkSlateGray"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Footer Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="BtnSubmit"
                            Content="Submit"
                            Width="130" Height="38" Margin="8"
                            Background="#1976D2" Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#1565C0"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="BtnSubmit_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#1565C0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2196F3"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#0D47A1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="BtnBack"
                            Content="Back to Main Menu"
                            Width="180" Height="38" Margin="8"
                            Background="#E3F2FD"
                            Foreground="#1565C0"
                            FontWeight="SemiBold"
                            BorderBrush="#64B5F6"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="BtnBack_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                                <Setter Property="BorderBrush" Value="#64B5F6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#BBDEFB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#90CAF9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
